%link{rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"}

.my-bootstrap-container
  #ext-content



%script#ext-content-t{type: "text/template"}
  #ext-settings
    %input.input-sm.form-control#ext-word{placeholder: "Word"}
    %input.input-sm.form-control#ext-sentence{placeholder: "Sentence"}
    %input.input-sm.form-control#ext-meaning{placeholder: "Meaning"}
    #ext-categories

  #ext-dictionaries



%script#ext-categories-t{type: "text/template"}
  .input-group.input-group-sm
    %a.btn.btn-default.form-control.dropdown-toggle{'data-toggle' => 'dropdown'}
      .fake-div
        .dropdown-title.pull-left <%= title %>
      .caret.pull-right{style: "margin-top: 8px;"}
    %ul.dropdown-menu{role: 'menu'}
      -# CategoryView will be appended

    %a#new-category.btn.btn-default.input-group-addon{data: {toggle: "popover", html: "true",
                                                             placement: "bottom",
                                                             container: "#ext-categories"}}
      %span.fa.fa-plus
    %a#upload.btn.btn-default.input-group-addon.disabled
      %span.fa.fa-upload
  
  #new-category-popover-content
    %label Make New Category (Hit Enter to Finish)
    %input#new-category-name.form-control.input-sm{placeholder: "Category Name"}



%script#ext-dictionary-t{type: "text/template"}
  .ext-dictionary.panel
    .from
      <%= data.dictionary %>: <%= data.type %>
      <% if(data.loading){ %>
      %i.fa.fa-spinner.fa-spin
      <% } %>
      .remove.btn.btn-default.btn-sm.pull-right
        %i.fa.fa-remove

    -# show matched entries
    <% if(data.type === "entries") { %>
    %ul
      <% _.each(data.entries, function(entry){ %>
      %li 
        %a{data: {toggle: "popover", html: "true", placement: "left"}}
          <%= entry.word %>
   
        -# popover effect is attached in dictionaryView in a somewhat wierd way
        %ul
          <% _.each(entry.meanings, function(meaning){ %>
          %li 
            %a.meaning <%= meaning %>
          <% }) %>
      <% }) %>
   
   
    -# show suggestions
    <% } else if(data.type === "suggestions") { %>
    %ul
      <% _.each(data.suggestions, function(suggestion){ %>
      %li 
        %a.suggestion <%= suggestion %>
      <% }) %>
    <% } %>
