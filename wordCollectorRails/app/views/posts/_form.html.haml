= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :word
    %br
    = f.text_area :word
  .field
    = f.label :sentence
    %br
    = f.text_area :sentence

  .field
    = label_tag 'cat_id', 'Category'
    - if @category != nil   # branch for checking whether _form is called from #new or #edit
      = "(" + @category.name + ")"
    %br
    = select_tag 'cat_id', options_from_collection_for_select(@categories, 'id', 'name')

  .field
    = f.label :picture
    %br
    = f.file_field :picture
    %br
    - if @post.picture.url != nil
      .post_show_pic
        = image_tag @post.picture.url

  .actions
    = f.submit
