= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :word
    %br/
    = f.text_area :word
  .field
    = f.label :sentence
    %br/
    = f.text_area :sentence
  .field
    = f.label :picture
    %br/
    = f.text_area :picture
  .actions
    = f.submit
