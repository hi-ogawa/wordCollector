span user: 
  strong
    em {{ user.username }} 

.btn-group
  a.btn.btn-default(ng-click="logout()") Logout
  a.btn.btn-default(ng-click="edit()") Edit account
  a.btn.btn-default(ng-click="delete()") Delete account
  i.fa.fa-spinner.fa-spin(ng-if="loading")

div(ng-cloak=true, ng-show="editing", user-form=true, form="userForm"
    label-submit="'Update'"   , label-cancel="'Cancel'"
    on-submit="editGo()", on-cancel="editing=false", loading="editLoading")
