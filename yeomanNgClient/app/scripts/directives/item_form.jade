form(name="form", ng-submit="submit()", novalidate=true)
  .form-group
    label Word
    input.form-control(ng-model="itemForm.word", required=true)

  .form-group
    label Meaning
    input.form-control(ng-model="itemForm.meaning")
   
  .form-group
    label Sentence
    input.form-control(ng-model="itemForm.sentence")

  .form-group
    label Picture
    input(my-file-upload="itemForm.picture", type="file")

  .form-actions
    button.btn.btn-primary(type="submit", ng-disabled="form.$invalid || loading") Submit
    a.btn.btn-link(ng-click="cancel()") Cancel
    i.fa.fa-spinner.fa-spin(ng-if="loading")