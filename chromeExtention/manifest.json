{
    "manifest_version": 2,

    "name": "word collector",
    "description": "pop up the meaning of the word you selected",
    "version": "1.0",

    "icons": { "16":   "icons/icon16.png",
	       "48":   "icons/icon48.png",
	       "128": "icons/icon128.png"
    },
    "browser_action": {
	"default_icon": "icons/icon16.png",
	"default_popup": "popup/popup.html"
    },
    "background": {
    	"scripts": ["eventPage/eventPage.js"],
    	"persistent": false
    },
    "permissions": [
	"identity",
	"tabs",
	"storage",
	"activeTab",
	"http://www.dictionaryapi.com/api/v1/references/collegiate/xml/*",
	"<all_urls>"
    ],

    "oauth2": {
	"client_id": "712903495105-o26t7jl825bthhp1oeq88smuct20lhno.apps.googleusercontent.com",
	"scopes": [
	    "https://www.googleapis.com/auth/userinfo.email"
	]
    }
}
