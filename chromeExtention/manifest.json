{
    "manifest_version": 2,

    "name": "word collector",
    "description": "pop up the meaning of the word you selected",
    "version": "1.0",

    "icons": { "16":   "icons/icon16.png",
	       "48":   "icons/icon48.png",
	       "128": "icons/icon128.png"
    },
    "browser_action": {
	"default_icon": "icons/icon16.png",
	"default_popup": "popup/popup.html"
    },
    "background": {
    	"scripts": ["eventPage/eventPage.js"],
    	"persistent": false
    },
    "permissions": [
	"tabs",
	"storage",
	"activeTab",
	"http://www.dictionaryapi.com/api/v1/references/collegiate/xml/*",
	"<all_urls>"
    ]
}
